<%- include('../partials/header') %>

<section id="show-page">
    <div>Airline: <%= flight.airline %></div>
    <div>Airport: <%= flight.airport %></div>
    <div>Flight Number: <%= flight.flightNo %></div>
    <div>Departs: <%= flight.departs %></div>
  </section>

<section id="tickets">
  <h2>Tickets</h2>
  <a href="/tickets/<%= flight._id %>/new">Add Ticket</a>
  <% if (flight.tickets.length) { %>
  <table>
    <thead>
      <tr>
        <th>Seat</th>
        <th>Price</th>
      </tr>
    </thead>
    <tbody>
      <% flight.tickets.forEach(function(t) { %>
        <tr>
          <td><%= t.seat %></td>
          <td><%= t.price %></td>
        </tr>
      <% }); %>
    </tbody>
  </table>
  <% } else { %>
  <h5>No Tickets Yet</h5>
  <% } %>
</section>

<section id="destinations">
  <h2>Destinations</h2>
  <form id="add-destination-form" method="POST"
    action="/flights/<%= flight._id %>/destinations">
    <label>Airport:</label>
    <select name="airport">
      <option value="AUS">AUS</option>
      <option value="DEN">DEN</option>
      <option value="DFW">DFW</option>
      <option value="LAX">LAX</option>
      <option value="SAN">SAN</option>
      </select>
      <label for="arrival">Arrives:</label>
      <input type="datetime-local" id="arrival"
      name="arrival" value="2020-05-25T00:00"
      min="2020-05-25T00:00" max="2030-05-25T00:00"><br><br>  
    <input type="submit" value="Add Destination">
  </form>

 <% if (flight.destinations.length) { %>
  <table>
    <thead>
      <tr>
        <th>Airport</th>
        <th>Arrival</th>
      </tr>
    </thead>
    <tbody>
      <% flight.destinations.forEach(function(f) { %>
        <tr>
          <td><%= f.airport %></td>
          <td><%= f.arrival %></td>
        </tr>
      <% }); %>
    </tbody>
  </table>
  <% } else { %>
  <h5>No Destinations Yet</h5>
  <% } %>
</section>

<%- include('../partials/footer') %>